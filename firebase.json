{
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "hosting": {
        "public": "dist/clientPanel/",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "rewrites": [
            {
                "source": "/public/**",
                "destination": "/index.html"
            },
            {
                "source": "/public/**",
                "destination": "/index.html"
            }
        ],
        "storage": {
            "rules": "storage.rules"
        }
    }
}
